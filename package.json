{
  "name": "roadtrip-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write . --config ./.prettierrc --ignore-path ./.prettierignore",
    "format:check": "prettier --check . --config ./.prettierrc --ignore-path ./.prettierignore",
    "prepare": "husky",
    "test": "jest"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "contentlayer2": "^0.5.8",
    "github-slugger": "^2.0.0",
    "next": "^15.5.4",
    "next-contentlayer2": "^0.5.8",
    "next-themes": "^0.4.6",
    "postcss": "8.5.6",
    "react": "19.0.0",
    "react-calendar": "^6.0.0",
    "react-dom": "19.0.0",
    "react-simple-maps": "^3.0.0",
    "react-swipeable": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.11",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.39.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/react-simple-maps": "^3.0.6",
    "eslint": "^9.39.0",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx}": "prettier --write --config ./.prettierrc --ignore-path ./.prettierignore",
    "*.{ts,tsx,js,jsx}": "eslint",
    "*.{ts,js}": "jest --findRelatedTests --passWithNoTests"
  },
  "overrides": {
    "d3-color": "3.1.0",
    "next-contentlayer": {
      "next": "$next"
    },
    "react-simple-maps": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "react-swipeable": {
      "react": "$react"
    },
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2"
  }
}
