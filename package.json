{
  "name": "roadtrip-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write . --config ./.prettierrc --ignore-path ./.prettierignore",
    "format:check": "prettier --check . --config ./.prettierrc --ignore-path ./.prettierignore",
    "prepare": "husky",
    "test": "jest"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@tailwindcss/typography": "^0.5.16",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "10.4.21",
    "contentlayer2": "^0.5.7",
    "github-slugger": "^2.0.0",
    "next": "^15.3.1",
    "next-contentlayer2": "^0.5.7",
    "next-themes": "^0.4.6",
    "postcss": "8.5.3",
    "react": "19.0.0",
    "react-calendar": "^5.1.0",
    "react-dom": "19.0.0",
    "react-simple-maps": "^3.0.0",
    "react-swipeable": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "sharp": "^0.34.1",
    "tailwindcss": "4.1.5",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.25.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/react-simple-maps": "^3.0.6",
    "eslint": "^9.25.1",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx}": "prettier --write --config ./.prettierrc --ignore-path ./.prettierignore",
    "*.{ts,tsx,js,jsx}": "eslint",
    "*.{ts,js}": "jest --findRelatedTests --passWithNoTests"
  },
  "overrides": {
    "d3-color": "3.1.0",
    "next-contentlayer": {
      "next": "$next"
    },
    "react-simple-maps": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "react-swipeable": {
      "react": "$react"
    },
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2"
  }
}
